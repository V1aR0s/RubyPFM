
<div class="operation-index-container">
  <h1><%= t("operations_view.title") %></h1>




  <table class="table table-bordered table-striped" style="background-color:white; border-radius:0px;">
    <thead class="thead-dark">
      <tr>
        <th scope="col"><%= t("tables.category") %></th>
        <th scope="col"><%= t("tables.date") %></th>
        <th scope="col"><%= t("tables.description") %></th>
        <th scope="col"><%= t("tables.amount") %></th>
        <th scope="col"><%= t("tables.action") %></th>
      </tr>
    </thead>
    <tbody>
      <% @operations.each do |operation| %>
        <tr >
          <th ><%= operation.category.name %></th>
          <th><%= operation.odate.to_date.strftime("%Y.%m.%d") %></th>
          <th><%= operation.description %></th>
          <th>
            <% if operation.income == true %>
              <p style="color:rgb(93, 166, 108);">
            <% else %>
              <p style="color:rgb(170, 79, 79);">
            <% end %>

            <%= operation.amount %>

            </p>
          <th>
            <div class="button-table">
              <a href="<%= edit_operation_path(operation) %>" class="btn btn-primary">
                <i class="fa fa-cog" style="font-size:14px"></i>
              </a>

              <%= button_to "X",operation, method: :delete, class:"btn btn-danger", style:"font-weight: bold;" %>
            </div>

          </th>
        </tr>
      <% end %>

    </tbody>

    

  </table>
  <%== pagy_nav(@pagy) %>

</div>
  <%= link_to "+", new_operation_path, class:"fixed-btn btn-add" %>
